{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "declarationDir": "types",
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
